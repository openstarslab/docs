{
  "name": "spark/spark",
  "type": "project",
  "require": {
    "php": "~8.2.0 || ~8.3.0",
    "spark/core": "self.version",
    "twig/twig": "3.x-dev"
  },
  "repositories": [
    {
      "type": "path",
      "url": "web/core",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "web/extensions/*",
      "options": {
        "symlink": true
      }
    }
  ],
  "minimum-stability": "dev",
  "config": {
    "platform": {
      "php": "8.2"
    },
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "require-dev": {
    "jetbrains/phpstorm-stubs": "dev-master",
    "mockery/mockery": "2.0.x-dev",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "1.11.x-dev",
    "phpstan/phpstan-mockery": "1.1.x-dev",
    "phpstan/phpstan-phpunit": "1.4.x-dev",
    "phpstan/phpstan-strict-rules": "1.5.x-dev",
    "phpunit/phpunit": "^11.0@dev",
    "squizlabs/php_codesniffer": "4.0.x-dev"
  },
  "scripts": {
    "dev:analyze": "vendor/bin/phpstan analyze --ansi --memory-limit=1G",
    "dev:ci": [
      "@dev:analyze",
      "@dev:lint",
      "@dev:test"
    ],
    "dev:coverage:html": "vendor/bin/phpunit --coverage-html .build/coverage/html/",
    "dev:lint": [
      "@dev:lint:fix",
      "@dev:lint:style"
    ],
    "dev:lint:fix": "vendor/bin/phpcbf",
    "dev:lint:style": "vendor/bin/phpcs -p --colors",
    "dev:test": [
      "@dev:test:unit"
    ],
    "dev:test:unit": "vendor/bin/phpunit"
  }
}
